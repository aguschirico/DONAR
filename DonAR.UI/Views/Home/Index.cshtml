@model DonAR.UI.Models.IndexModels
@using PagedList.Mvc;

@{
    ViewBag.Title = "Don-Ar";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />

<div class="sub-header">
    <div class="container clearfix">
        <h1 class="fl bold">Detalle de Campañas</h1>

    </div>
    <div id="info_bar">
        <div class="container clearfix">
            <span id="red_cross_content" class="fl">
                @(string.IsNullOrEmpty(Model.CategoryName) ? "Todas las campañas vigentes" : Model.CategoryName)
            </span>
        </div>
    </div>
</div>
<div class="content">
    <div class="container clearfix">
        <section class="browse-results fr translate">
            <ul class="badges clearfix">
                @foreach (var i in Model.Campaigns)
                {
                    <li class="fl badge rounded shadow ">
                        <div class="image clearfix">
                            <a href="/campaign/index?id=@i.Id">
                                <img alt="20121111042332-684891879" class="fl rounded rounded-no-bottom" height="194" src="/Content/@i.ImageName" width="220">
                            </a>
                        </div>
                        <div class="project-category translate">
                            @i.CategoryName
                        </div>
                        <div class="project-details">
                            <a href="/campaign/index?id=@i.Id">
                                @i.Title
                            </a>
                            <p class="description notranslate">
                                @i.Description
                            </p>
                        </div>
                        <div class="targets clearfix">
                            <p class="progress complete@(Math.Round(i.Funded * 100)) ir rounded">Starting - 1.27069 Complete</p>
                            <div class="baseball_stats_wrapper">
                                <div class="baseball_stats">
                                    <p class="fl percent-funded"><span class="amount notranslate">@(i.Funded * 100)%</span><br>objetivo</p>
                                    <p class="fl money-raised"><span class="amount notranslate">@i.StartDate.ToShortDateString()</span><br>desde</p>
                                    <p class="fl days-left"><span class="amount notranslate">@i.LimitDate.ToShortDateString()</span><br> hasta</p>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <div>
                @Html.PagedListPager(Model.Campaigns, page => Url.Action("Index", new { page = page }))
            </div>
