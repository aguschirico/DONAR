        </section>
        <aside class="fl category-menu">
            <nav>
                <div class="advanced-search">
                    <a class="toggle rounded" href="/">Todas las campañas</a>
                </div>
                <ul class="main-categories">
                    @foreach (var i in Model.Categories)
                    {
                        <li class="category">
                            <a href="/home/bycategory?categoryid=@i.Id" class="link bold">@i.Name</a>
                        </li>
                    }
                </ul>
            </nav>
        </aside>
    </div>
</div>